#!/bin/bash

./strip-image -v \
	-i iss2023/lima4-db_i \
	-t iss2023/lima4-db-stripped_i \
  -d Dockerfile \
	-p bash \
	-p mariadb \
	-p mysql \
	-p mysqld \
	-p mysql-server \
	-p coreutils \
	-f /usr/local/bin/docker-entrypoint.sh \
	-f /mysql/mysql.conf.d/mysql.cnf \
	-f /root/.gnupg \
	-f /docker-entrypoint-initdb.d \
	-f /bin/sh \
	-f /usr/local/bin/gosu \
	-f /usr/bin/sed \
	-f /tmp \
	-f /run/mysqld/mysqld.sock \
	-f /etc/passwd \
	-f /usr/sbin/mysqld \
	-f /usr/bin/mysqld \
	-f /usr/bin/awk \
	-f /usr/bin/find \
	-f /usr/bin/apt-get \
	-f /run/mysqld \
	-f /root \
	-f /usr/bin/mariadb-install-db \
	-f /usr/bin/my_print_defaults \
	-f /usr/share/mysql/ \
	-f /etc/hosts \
	-f /etc/mysql \
	-f /usr/bin/resolveip \
	-f /etc/group \
	-f /usr/bin/gpg \
	-f /etc/nsswitch.conf \
	-f /usr/bin/mysql \
	-f /usr/bin/id \
	-f /var/lib/mysql \
	-f /var/lib/mysql/ \
	-f /etc/mysql/* \
	-f /usr/bin/resolveip \
	-f /mysql/mysql.conf.d/mysqld.cnf \
	-f /bin/sh \
	-f /usr/bin/mariadb-tzinfo-to-sql \
	-f /usr/sbin/mariadb-tzinfo-to-sql \
 	-f /usr/share/zoneinfo
